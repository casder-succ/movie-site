{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "public/dist/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "development": {
      "dependsOn": ["dev"],
      "cache": false
    },
    "precommit": {
      "outputs": [
        "dist/**",
        "build/**"
      ]
    }
  }
}
